{
    "workbench.colorCustomizations": {
        "terminal.foreground": "#ffffff",
        "activityBar.background": "#3E067E",
        "titleBar.activeBackground": "#5708B1",
        "titleBar.activeForeground": "#fbfffd"
    },
    "jupyter.askForKernelRestart": false,
    "git.confirmSync": false,
    "terminal.integrated.enableMultiLinePasteWarning": false,
    "terminal.integrated.fontFamily": "MesloLGS NF",
    "terminal.integrated.defaultProfile.osx": "zsh",
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "editor.formatOnSave": true,
    "[python]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.codeActionsOnSave": {
            "source.fixAll": "never",
            "source.organizeImports": "never",
            "source.organizeImports.ruff": "explicit"
        }
    },
    "ruff.lint.args": [
        "--line-length",
        "100"
    ],
    "github.copilot.enable": {
        "*": true,
        "yaml": true,
        "plaintext": false,
        "markdown": true
    },
    "git.suggestSmartCommit": false,
    "[terraform]": {
        "editor.tabSize": 2
    },
    "security.workspace.trust.untrustedFiles": "open",
    // "workbench.editorAssociations": {
    //     "*.md": "vscode.markdown.preview.editor"
    // },
    "notebook.output.textLineLimit": 100,
    "files.associations": {
        "*.dvc": "yaml",
        "dvc.lock": "yaml"
    },
    "window.commandCenter": false,
    "workbench.colorTheme": "Visual Studio Dark",
    "workbench.activityBar.orientation": "vertical",
    "githubPullRequests.commentExpandState": "collapseAll",
    "python.terminal.activateEnvironment": true,
    "python.terminal.activateEnvInCurrentTerminal": true,
    "python.venvFolders": [
        "venv"
    ],
    "python.venvPath": "$pwd/venv",
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/*/**": true,
        "venv": true,
        ".venv": true
    },
    "window.zoomLevel": 1.1232594556959365
}
